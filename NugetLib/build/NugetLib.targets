<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Target Name="CopyFontsTarget" AfterTargets="Build">
    <Message Importance="High" Text="-------------NugetLib.targets BEGIN----------------" />
    
    <ItemGroup>
      <FontsFiles Include="$(ProjectDir)fonts\*.*" />

      <Content Include="@(FontsFiles)">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        <PackageCopyToOutput>true</PackageCopyToOutput>
      </Content>
    </ItemGroup>

    <Copy SourceFiles="@(FontsFiles)" DestinationFolder="$(OutDir)\fonts" />
    
    <Message Importance="High" Text="-------------NugetLib.targets END----------------" />
  </Target>
</Project>
